<h1>投稿詳細画面</h1>

<%= image_tag @picture.image.url if @picture.image.url %>
<%= @picture.content if @picture.content %>

  <div class="show_edit"><%= link_to '編集', edit_picture_path %></div>
  <div class="show_to_back"><%= link_to '戻る', pictures_path %></div>
  <div class="favorite">
    <% unless @picture.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
  </div>

<%= link_to "投稿一覧画面にもどる", pictures_path %>
